<div class="slide" {{ stimulus_controller('hello', { id: id }) }}>
    <h3>{{ title }}</h3>
    <section id="{{ id }}" class="splide" aria-label="Splide Basic HTML Example">

        <div class="splide__arrows">
            <button class="splide__arrow splide__arrow--prev test">
                <svg xmlns="http://www.w3.org/2000/svg" width="5em" height="5em" viewBox="0 0 20 20"><path fill="currentColor" d="M7 1L5.6 2.5L13 10l-7.4 7.5L7 19l9-9z"/></svg>
            </button>
            <button class="splide__arrow splide__arrow--next test">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 20 20"><path fill="currentColor" d="M7 1L5.6 2.5L13 10l-7.4 7.5L7 19l9-9z"/></svg>
            </button>
        </div>

        <div class="splide__track">
            <ul class="splide__list">
                {% for i in 1..10 %}
                    <div class="splide__slide">
                        <div class="slide__single--numbered">
                            <p>{{ i }}</p>
                            <img  src="https://picsum.photos/id/{{ random(1, 200) }}/300/200" alt="Random Picture {{ i }}">
                        </div>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </section>
</div>
